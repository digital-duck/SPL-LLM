{
  "comments": {
    "lineComment": "--",
    "blockComment": [ "/*", "*/" ]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": """, "close": """, "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": """, "close": """ },
    { "open": "'", "close": "'" }
  ],
  "wordPattern": "(-?\d*\.\d\w*)|([^`\~\!\@\#\%\^\&\*\(\)\-\=\+\[\{\]\}\|\;\:'"\,\.\<\>\/\?\s]+)"
}
